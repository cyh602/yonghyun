<body>
     
  <% include ../partials/navigation.ejs %>

        <div class="container">
            <h5 class="text-primary"><i class="fa fa-tags fa-fw"></i> 요금제<span class="badge right"><script>document.write("<%=data2.svc_num%>".formatTel());</script></span></h5>
            <p></p>
            <div class="panel panel-primary">
              <div class="panel-heading">
                <p class="panel-title"><%=data2.cust_name%> 님이 사용중인 요금제</p>
              </div>
              <div class="panel-body">
                  <h2><%=data2.fee_prod_nm%></h2>
                   <% data.forEach(function(e) { %>
                    <% if(data2.fee_prod_id == e.prod_cd){%>
                  <div>- Data <%=e.prod_data%></div>
                  <div>- 음성 <%=e.prod_vo%></div>
                  <div>- 문자 <%=e.prod_sms%></div>
                  <%}})%>
              </div>  
            </div>
        
            
            <table class="table table-striped table-hover ">
            <thead>
              <tr>
                <th>구분</th>
                <th>요금제</br>이용금액</th>
                <th>DATA</th>
                <th>음성</th>
                <th>문자</th>
              </tr>
            </thead>
            <tbody>
              <% if(data !=null) { %>
              <% data.forEach(function(e) { %>
              
              <tr>
                <td><%=e.prod_cl%></td>
                <td><a href="/prod_chg/<%= e._id %>"><%=e.prod_nm%></br><script>document.write("<%=e.prod_fee%>".formatCommas());</script></a></td>
                <td><%=e.prod_data%></td>
                <td><%=e.prod_vo%></td>
                <td><%=e.prod_sms%></td>
              </tr>
              <% })} %>
            </tbody>
          </table> 
      </div>
      <div class="section">
            <% include ../partials/footer.ejs %>
      </div>

</body>
</html>